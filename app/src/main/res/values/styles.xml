<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SubHeading">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorHeaderOrange</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="Heading">
        <item name="android:fontFamily" tools:targetApi="16">@font/sriracha</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/colorLightGrey</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorButtonBlue</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingRight">36dp</item>
    </style>

</resources>
